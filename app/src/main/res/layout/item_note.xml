<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="@dimen/common_margin_2dp"
            android:id="@+id/tv_item_note_content"
            style="@style/layout_wrap"
            android:layout_marginLeft="6dp"
            android:text="标题"
            android:textColor="@color/gray_3333"
            android:textSize="@dimen/textsize_16sp" />

        <TextView
            android:id="@+id/tv_item_note_time"
            style="@style/layout_wrap"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_item_note_content"
            android:layout_marginBottom="@dimen/common_margin_2dp"
            android:layout_marginRight="@dimen/common_margin_5dp"
            android:text="2018.12.08"
            android:textColor="@color/gray_8888"
            android:textSize="@dimen/textsize_16sp" />

        <View
            style="@style/line_horizontal"
            android:layout_below="@id/tv_item_note_time" />
    </RelativeLayout>
</FrameLayout>
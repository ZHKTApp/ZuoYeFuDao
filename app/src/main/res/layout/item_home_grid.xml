<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_grid_subjects"
        android:layout_width="@dimen/common_margin_90dp"
        android:layout_height="@dimen/common_margin_90dp"
        android:background="@mipmap/wuli" />

    <TextView
        android:id="@+id/tv_item_grid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_18sp"
        android:textColor="@color/gray_464f"
        android:layout_marginTop="23dp"
        android:text="物理" />

</LinearLayout>
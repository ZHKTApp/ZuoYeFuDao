<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_textbook"
        android:layout_width="200dp"
        android:layout_height="254dp"
        android:background="@mipmap/textbook" />

    <TextView
        android:layout_marginTop="@dimen/common_margin_10dp"
        android:id="@+id/tv_item_textbook_name"
        style="@style/text_18_wrap"
        android:text="物理" />
    <TextView
        android:layout_marginTop="@dimen/common_margin_10dp"
        android:id="@+id/tv_item_textbook_class"
        android:text="高中一年级上册"
        style="@style/text_18_wrap" />
    <TextView
        android:layout_marginTop="@dimen/common_margin_10dp"
        android:id="@+id/tv_item_textbook_creat"
        android:text="(人民教育出版社)"
        android:textColor="@color/gray_8888"
        style="@style/text_18_wrap" />

</LinearLayout>
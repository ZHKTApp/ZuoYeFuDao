<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        style="@style/text_12_wrap"
        android:layout_marginLeft="19dp"
        android:text="作答: "
        android:textColor="@color/gray_3333"
        android:textSize="@dimen/textsize_18sp" />

    <CheckBox
        android:id="@+id/cb_selectA"
        style="@style/checkbox_multiselect"
        android:text="A" />

    <CheckBox
        android:id="@+id/cb_selectB"
        style="@style/checkbox_multiselect"
        android:text="B" />

    <CheckBox
        android:id="@+id/cb_selectC"
        style="@style/checkbox_multiselect"
        android:text="C" />

    <CheckBox
        android:id="@+id/cb_selectD"
        style="@style/checkbox_multiselect"
        android:text="D" />

    <CheckBox
        android:id="@+id/cb_selectE"
        style="@style/checkbox_multiselect"
        android:text="E" />

    <CheckBox
        android:id="@+id/cb_selectF"
        style="@style/checkbox_multiselect"
        android:text="F" />

</LinearLayout>